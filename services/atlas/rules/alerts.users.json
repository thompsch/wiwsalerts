{
    "database": "alerts",
    "collection": "users",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "oauth_id": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "system",
            "apply_when": {},
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "oauth_id": {
                "bsonType": "string"
            }
        }
    }
}
